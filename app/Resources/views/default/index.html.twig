{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('styles/index.css') }}" />
{% endblock %}

{% block body %}
    <div class="main">
        {% for flash_message in app.session.flashBag.get('notice') %}
            <div class="flash-notice">
                {{ flash_message }}
            </div>
        {% endfor %}
        <div class="topics">
            <a href="{{ asset(path('topics')) }}"><span class="glyphicon glyphicon-tasks" aria-hidden="true"></span><div class="spacing"></div>Tematy bieżące</a>
        </div>
        <div class="estimates">
            <a href="#"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><div class="spacing"></div>Kosztorysy ofertowe</a>
        </div>
        <div class="reckons">
            <a href="#"><span class="glyphicon glyphicon-briefcase" aria-hidden="true"></span><div class="spacing"></div>Rozliczenia</a>
        </div>
        <div class="orders">
            <a href="#"><span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span><div class="spacing"></div>Zamówienia</a>
        </div>
        <div style="clear: both"></div>
    </div>
{% endblock %}
